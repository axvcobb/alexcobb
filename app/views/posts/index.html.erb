<!-- Blog Homepage -->
<% if logged_in? %>
  <br>
  <div class="row">
    <div class="col-8 offset-2">
      <%= link_to 'New post', new_post_path, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<br>
<% @posts.each do |post| %>
<div class="row">
  <div class="col-8 offset-2">
    <div class="card">
      <div class="card-header">
        <h3><%= post.title %></h3>
      </div>
      <div class="card-body">
        <p class="card-text"><%= post.text %></p>
      </div>
      <% if logged_in? %>
      <div class="card-footer text-right">
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-success' %>
        <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<% end %>
